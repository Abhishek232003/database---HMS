-- Create the STUDENTS table
CREATE TABLE STUDENTS (
    STDID INT PRIMARY KEY,
    STDNAME VARCHAR(100),
    STDDEGREE VARCHAR(100),
    STDPASSOUTYEAR INT,
    STDAGE INT,
    STDADDRESS VARCHAR(255),
    CLASS VARCHAR(50),
    SECTION VARCHAR(10)
);

-- Create a view for students to see wardern names
CREATE VIEW STUDENT_WARDERN_VIEW AS
SELECT WARDERNAME FROM WARDERN;

-- View for students to see their room details (normalized)
CREATE OR REPLACE VIEW STUDENT_ROOM_VIEW AS
SELECT S.STDID, S.STDNAME, R.RoomNumber, R.RoomType, R.Floor
FROM STUDENTS S
JOIN ROOM R ON S.STDID = R.StudentID;
